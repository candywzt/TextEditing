<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.candyenk.textediting">
    <!--接入网络-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--获取网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--获取Wifi状态-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!--悬浮窗-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <!--存储读取-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!--存储写入-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" tools:ignore="ScopedStorage"/>
    <!--读取应用列表-->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" tools:ignore="QueryAllPackagesPermission"/>

    <application
            android:name="com.candyenk.textediting.APP"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher"
            android:supportsRtl="true"
            android:theme="@style/Theme.CDK">
        <activity
                android:name="com.candyenk.textediting.ui.ActivityHome"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.candyenk.textediting.ui.ActivityAbout"
                android:exported="true">
        </activity>
        <activity
                android:name="com.candyenk.textediting.ui.ActivityTest"
                android:exported="true">
        </activity>
        <activity
                android:name="com.candyenk.textediting.ui.ActivityPlugin"
                android:exported="true">
        </activity>
        <activity
                android:name="com.candyenk.textediting.ui.ActivityLog"
                android:exported="true">
        </activity>
    </application>

</manifest>